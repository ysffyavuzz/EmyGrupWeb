@{
    ViewData["Title"] = "FMCG";
}
@inject Microsoft.Extensions.Localization.IStringLocalizer<SharedResource> L

<style>
    :root {
        --navbar-height: 70px;
    }

    .fmcg-page {
        margin-top: var(--navbar-height);
        background: #f8fafc;
        min-height: calc(100vh - var(--navbar-height));
    }

    /* ========================================= */
    /* HERO SECTION                              */
    /* ========================================= */
    .fmcg-hero {
        background: linear-gradient(135deg, #274472 0%, #1a3259 100%);
        padding: 70px 0 60px;
        text-align: center;
        position: relative;
        overflow: hidden;
    }

    .fmcg-hero::before {
        content: '';
        position: absolute;
        top: -50%;
        left: -20%;
        width: 500px;
        height: 500px;
        background: radial-gradient(circle, rgba(255,255,255,0.06) 0%, transparent 70%);
        border-radius: 50%;
    }

    .fmcg-hero-content {
        position: relative;
        z-index: 1;
        max-width: 700px;
        margin: 0 auto;
        padding: 0 20px;
    }

    .fmcg-badge {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 10px 20px;
        background: rgba(255, 255, 255, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.2);
        border-radius: 50px;
        color: rgba(255, 255, 255, 0.9);
        font-size: 0.875rem;
        font-weight: 600;
        letter-spacing: 0.5px;
        margin-bottom: 20px;
    }

    .fmcg-hero h1 {
        color: #ffffff;
        font-size: clamp(2rem, 5vw, 2.75rem);
        font-weight: 700;
        margin-bottom: 16px;
        letter-spacing: -0.02em;
    }

    .fmcg-hero p {
        color: rgba(255, 255, 255, 0.8);
        font-size: 1.0625rem;
        line-height: 1.7;
    }

    /* ========================================= */
    /* BRANDS SECTION                            */
    /* ========================================= */
    .brands-section {
        padding: 60px 0 80px;
    }

    .brands-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 20px;
    }

    .brands-header {
        text-align: center;
        margin-bottom: 48px;
    }

    .brands-header h2 {
        font-size: 1.5rem;
        font-weight: 700;
        color: #0f172a;
        margin-bottom: 8px;
    }

    .brands-header p {
        color: #64748b;
        font-size: 1rem;
    }

    /* Brands Grid */
    .brands-grid {
        display: grid;
        grid-template-columns: repeat(5, 1fr);
        gap: 20px;
    }

    .brand-card {
        background: #ffffff;
        border-radius: 16px;
        aspect-ratio: 1 / 1;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 20px;
        border: 1px solid #e2e8f0;
        transition: all 0.2s ease;
    }

    .brand-card:hover {
        border-color: #cbd5e1;
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.08);
        transform: translateY(-4px);
    }

    .brand-card img {
        max-width: 75%;
        max-height: 75%;
        object-fit: contain;
        filter: grayscale(20%);
        opacity: 0.85;
        transition: all 0.2s ease;
    }

    .brand-card:hover img {
        filter: grayscale(0%);
        opacity: 1;
        transform: scale(1.05);
    }

    /* Stats */
    .brands-stats {
        display: flex;
        justify-content: center;
        gap: 60px;
        margin-top: 60px;
        padding-top: 40px;
        border-top: 1px solid #e2e8f0;
    }

    .stat-item {
        text-align: center;
    }

    .stat-number {
        font-size: 2.5rem;
        font-weight: 700;
        color: #274472;
        line-height: 1;
        margin-bottom: 8px;
    }

    .stat-label {
        font-size: 0.9375rem;
        color: #64748b;
        font-weight: 500;
    }

    /* Responsive */
    @@media (max-width: 1200px) {
        .brands-grid {
            grid-template-columns: repeat(4, 1fr);
        }
    }

    @@media (max-width: 992px) {
        .brands-grid {
            grid-template-columns: repeat(3, 1fr);
        }

        .brands-stats {
            gap: 40px;
        }
    }

    @@media (max-width: 768px) {
        .fmcg-hero {
            padding: 50px 0 45px;
        }

        .brands-stats {
            flex-wrap: wrap;
            gap: 32px;
        }

        .stat-number {
            font-size: 2rem;
        }
    }

    @@media (max-width: 576px) {
        .brands-grid {
            grid-template-columns: repeat(2, 1fr);
            gap: 12px;
        }

        .brand-card {
            border-radius: 12px;
            padding: 16px;
        }
    }
</style>

