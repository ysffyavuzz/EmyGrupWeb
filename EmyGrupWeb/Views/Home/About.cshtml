@{
    ViewData["Title"] = "Hakkımızda";
}
@inject Microsoft.Extensions.Localization.IStringLocalizer<SharedResource> L

<style>
    :root {
        --navbar-height: 70px;
    }

    .about-page {
        margin-top: var(--navbar-height);
        background: #f8fafc;
        min-height: calc(100vh - var(--navbar-height));
    }

    /* ========================================= */
    /* HERO SECTION                              */
    /* ========================================= */
    .about-hero {
        background: linear-gradient(135deg, #274472 0%, #1a3259 100%);
        padding: 70px 0 60px;
        text-align: center;
        position: relative;
        overflow: hidden;
    }

    .about-hero::before {
        content: '';
        position: absolute;
        bottom: -30%;
        right: -10%;
        width: 500px;
        height: 500px;
        background: radial-gradient(circle, rgba(255,255,255,0.06) 0%, transparent 70%);
        border-radius: 50%;
    }

    .about-hero-content {
        position: relative;
        z-index: 1;
        max-width: 700px;
        margin: 0 auto;
        padding: 0 20px;
    }

    .about-badge {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 10px 20px;
        background: rgba(255, 255, 255, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.2);
        border-radius: 50px;
        color: rgba(255, 255, 255, 0.9);
        font-size: 0.875rem;
        font-weight: 600;
        letter-spacing: 0.5px;
        margin-bottom: 20px;
    }

    .about-hero h1 {
        color: #ffffff;
        font-size: clamp(2rem, 5vw, 2.75rem);
        font-weight: 700;
        margin-bottom: 16px;
        letter-spacing: -0.02em;
    }

    .about-hero p {
        color: rgba(255, 255, 255, 0.8);
        font-size: 1.0625rem;
        line-height: 1.7;
    }

    /* ========================================= */
    /* CONTENT SECTION                           */
    /* ========================================= */
    .about-content {
        padding: 60px 0 80px;
    }

    .about-container {
        max-width: 1100px;
        margin: 0 auto;
        padding: 0 20px;
    }

    /* Cards Grid */
    .about-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 24px;
    }

    .about-card {
        background: #ffffff;
        border-radius: 20px;
        padding: 32px;
        border: 1px solid #e2e8f0;
        transition: all 0.2s ease;
    }

    .about-card:hover {
        border-color: #cbd5e1;
        box-shadow: 0 8px 30px rgba(0, 0, 0, 0.06);
    }

    .about-card.featured {
        grid-column: span 2;
        background: linear-gradient(135deg, #274472 0%, #1a3259 100%);
        border: none;
    }

    .about-card.featured .card-icon {
        background: rgba(255, 255, 255, 0.15);
        color: #ffffff;
    }

    .about-card.featured .card-title {
        color: #ffffff;
    }

    .about-card.featured .card-text {
        color: rgba(255, 255, 255, 0.85);
    }

    .card-icon {
        width: 56px;
        height: 56px;
        border-radius: 14px;
        background: linear-gradient(135deg, rgba(68, 109, 150, 0.1) 0%, rgba(39, 68, 114, 0.1) 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 20px;
        color: #274472;
        font-size: 1.5rem;
    }

    .card-title {
        font-size: 1.25rem;
        font-weight: 700;
        color: #0f172a;
        margin-bottom: 12px;
    }

    .card-text {
        color: #64748b;
        font-size: 1rem;
        line-height: 1.75;
        margin: 0;
    }

    /* Image Section */
    .about-image-section {
        margin-top: 40px;
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 20px;
    }

    .about-image {
        border-radius: 16px;
        overflow: hidden;
        height: 220px;
        position: relative;
    }

    .about-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.3s ease;
    }

    .about-image:hover img {
        transform: scale(1.05);
    }

    .about-image::after {
        content: '';
        position: absolute;
        inset: 0;
        background: linear-gradient(180deg, transparent 50%, rgba(0,0,0,0.4) 100%);
        pointer-events: none;
    }

    /* Values Section */
    .values-section {
        margin-top: 60px;
        text-align: center;
    }

    .values-title {
        font-size: 1.5rem;
        font-weight: 700;
        color: #0f172a;
        margin-bottom: 32px;
    }

    .values-grid {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 24px;
    }

    .value-item {
        padding: 24px 16px;
        background: #ffffff;
        border-radius: 16px;
        border: 1px solid #e2e8f0;
        transition: all 0.2s ease;
    }

    .value-item:hover {
        border-color: #446D96;
        transform: translateY(-4px);
    }

    .value-icon {
        width: 48px;
        height: 48px;
        border-radius: 12px;
        background: linear-gradient(135deg, #446D96 0%, #274472 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 16px;
        color: #ffffff;
        font-size: 1.25rem;
    }

    .value-title {
        font-size: 1rem;
        font-weight: 600;
        color: #0f172a;
        margin-bottom: 8px;
    }

    .value-text {
        font-size: 0.875rem;
        color: #64748b;
        line-height: 1.6;
        margin: 0;
    }

    /* Responsive */
    @@media (max-width: 992px) {
        .about-grid {
            grid-template-columns: 1fr;
        }

        .about-card.featured {
            grid-column: span 1;
        }

        .about-image-section {
            grid-template-columns: 1fr;
        }

        .about-image {
            height: 200px;
        }

        .values-grid {
            grid-template-columns: repeat(2, 1fr);
        }
    }

    @@media (max-width: 768px) {
        .about-hero {
            padding: 50px 0 45px;
        }
    }

    @@media (max-width: 576px) {
        .about-card {
            padding: 24px;
        }

        .values-grid {
            grid-template-columns: 1fr;
            gap: 16px;
        }

        .value-item {
            padding: 20px;
        }
    }
</style>

<div class="about-page">

    <!-- Hero Section -->
    <section class="about-hero">
        <div class="about-hero-content">
            <div class="about-badge">
                <i class="bi bi-building"></i>
                @L["Side_Menu_Hakkimizda"]
            </div>
            <h1>EMY Grup</h1>
            <p>
                Türkiye'nin önde gelen FMCG dağıtım ve ihracat şirketlerinden biri olarak,
                güvenilirlik ve kalite odaklı hizmet sunuyoruz.
            </p>
        </div>
    </section>

    <!-- Content Section -->
    <section class="about-content">
        <div class="about-container">

            <!-- Cards -->
            <div class="about-grid">

                <!-- Hakkımızda - Featured -->
                <div class="about-card featured">
                    <div class="card-icon">
                        <i class="bi bi-info-circle"></i>
                    </div>
                    <h3 class="card-title">@L["About_Hakkimizda_Baslik"]</h3>
                    <p class="card-text">@L["About_Hakkimizda_Icerik"]</p>
                </div>

                <!-- Misyon -->
                <div class="about-card">
                    <div class="card-icon">
                        <i class="bi bi-bullseye"></i>
                    </div>
                    <h3 class="card-title">@L["About_Misyon_Baslik"]</h3>
                    <p class="card-text">@L["About_Misyon_Icerik"]</p>
                </div>

                <!-- Vizyon -->
                <div class="about-card">
                    <div class="card-icon">
                        <i class="bi bi-eye"></i>
                    </div>
                    <h3 class="card-title">@L["About_Vizyon_Baslik"]</h3>
                    <p class="card-text">@L["About_Vizyon_Icerik"]</p>
                </div>

            </div>

            <!-- Images -->
            <div class="about-image-section">
                <div class="about-image">
                    <img src="https://images.unsplash.com/photo-1586528116311-ad8dd3c8310d?auto=format&fit=crop&w=800&q=70"
                         alt="Lojistik ve İhracat" loading="lazy" />
                </div>
                <div class="about-image">
                    <img src="~/images/ihrac.jpg" alt="İhracat Operasyonu" loading="lazy" />
                </div>
                <div class="about-image">
                    <img src="https://images.unsplash.com/photo-1578575437130-527eed3abbec?auto=format&fit=crop&w=800&q=70"
                         alt="Konteyner Limanı" loading="lazy" />
                </div>
            </div>

            <!-- Values -->
            <div class="values-section">
                <h2 class="values-title"><i class="bi bi-star me-2"></i>Değerlerimiz</h2>
                <div class="values-grid">
                    <div class="value-item">
                        <div class="value-icon">
                            <i class="bi bi-shield-check"></i>
                        </div>
                        <h4 class="value-title">Güvenilirlik</h4>
                        <p class="value-text">İş ortaklarımıza ve müşterilerimize her zaman güven veririz</p>
                    </div>
                    <div class="value-item">
                        <div class="value-icon">
                            <i class="bi bi-award"></i>
                        </div>
                        <h4 class="value-title">Kalite</h4>
                        <p class="value-text">En yüksek kalite standartlarında hizmet sunuyoruz</p>
                    </div>
                    <div class="value-item">
                        <div class="value-icon">
                            <i class="bi bi-lightning"></i>
                        </div>
                        <h4 class="value-title">Hız</h4>
                        <p class="value-text">Hızlı teslimat ve çözüm odaklı yaklaşım</p>
                    </div>
                    <div class="value-item">
                        <div class="value-icon">
                            <i class="bi bi-people"></i>
                        </div>
                        <h4 class="value-title">İş Birliği</h4>
                        <p class="value-text">Güçlü iş ortaklıkları ile birlikte büyüyoruz</p>
                    </div>
                </div>
            </div>

        </div>
    </section>

</div>
