        const delayToNext = (intervalMs - (now % intervalMs)) % intervalMs;

        masterTimeout = setTimeout(() => {
            masterTick();
            masterTimer = setInterval(masterTick, intervalMs);
        }, delayToNext);
    }

    function stopMasterClockIfIdle() {
        // İki section da görünürde değilse tamamen durdur
        if (inViewBrands || inViewBrands2) return;

        if (masterTimeout) {
            clearTimeout(masterTimeout);
