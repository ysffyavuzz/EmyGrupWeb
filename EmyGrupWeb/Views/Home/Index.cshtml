<!-- JS : COUNTER + SCROLL ANIM + SLIDER + PRELOADER LOGIC -->
<!-- ====================================================== -->
<script>
        /* Scroll Animasyonları */
    const animatedItems = document.querySelectorAll(".animate");

    const observer = new IntersectionObserver(entries => {
        entries.forEach(entry => {
            if (entry.isIntersecting) {
                entry.target.classList.add("visible");
            }
        });
    }, { threshold: 0.2 });

    animatedItems.forEach(item => observer.observe(item));

    /* SAYI ANİMASYONU — yalnızca görünce başlar */
    const counterItems = document.querySelectorAll(".counter");
    let countersStarted = false;

    function startCounters() {
        counterItems.forEach(counter => {
            const target = +counter.getAttribute("data-target");
            let count = 0;

            const update = () => {
                const increment = target / 80;

                if (count < target) {
                    count += increment;

                    // ⭐ BINLIK FORMAT BURADA UYGULANIYOR
                    counter.innerText = Math.ceil(count).toLocaleString("tr-TR");

                    requestAnimationFrame(update);
                } else {
                    // ⭐ SON HALİ DE BINLIK FORMATTA
                    counter.innerText = target.toLocaleString("tr-TR") + "+";
                }
            };

            update();
        });
    }

    const counterObserver = new IntersectionObserver(entries => {
        entries.forEach(entry => {
            if (entry.isIntersecting && !countersStarted) {
                countersStarted = true;
                startCounters();
            }
        });
    }, { threshold: 0.4 });

    counterItems.forEach(item => counterObserver.observe(item));



    // =========================================
    //  SLIDERLAR: AŞAĞI GELİNCE BAŞLA + TEK TIMER İLE SENKRON
    // =========================================
    const intervalMs = 2000;

    const slider1 = document.getElementById("brandSlider");
    const slider2 = document.getElementById("brandSlider2");

    let masterTimer = null;
    let masterTimeout = null;

    let inViewBrands = false;
    let inViewBrands2 = false;

    // Preloader varken/scroll kilitliyken başlamasın diye
    let userScrolled = false;
    window.addEventListener("scroll", () => { userScrolled = true; }, { once: true });

        function slideStepOne(sliderEl) {
        if (!sliderEl) return;

        // 1 item = %20 (çünkü brand-item flex: 0 0 20%)
        sliderEl.style.transition = "transform 0.6s ease-in-out";
        sliderEl.style.transform = "translateX(-20%)";

        setTimeout(() => {
            sliderEl.style.transition = "none";
            sliderEl.appendChild(sliderEl.firstElementChild);
            sliderEl.style.transform = "translateX(0)";
        }, 600);
    }

    function slideStepFive(sliderEl) {
        if (!sliderEl) return;

        const moveCount = 5;
        const children = sliderEl.children.length;

        // eleman azsa tekli devam etsin (fallback)
        if (children <= moveCount) {
            slideStepOne(sliderEl);
            return;
        }

        // 5 item = 5 * %20 = %100
        sliderEl.style.transition = "transform 0.6s ease-in-out";
        sliderEl.style.transform = "translateX(-100%)";

        setTimeout(() => {
            sliderEl.style.transition = "none";

            // ilk 5 elemanı sona at
            for (let i = 0; i < moveCount; i++) {
                sliderEl.appendChild(sliderEl.firstElementChild);
            }

            sliderEl.style.transform = "translateX(0)";
        }, 600);
    }

    function masterTick() {
        // sadece görünürde olanları kaydır
        if (inViewBrands)  slideStepOne(slider1);   // MARKALARIMIZ → tekli
        if (inViewBrands2) slideStepFive(slider2);  // FMCG → 5'li
    }


