        const gap = 20; // footer ile buton arasında boşluk

        function findFooter() {
            // Layout'ta footer hangi element olursa olsun yakalamaya çalışıyoruz
            return document.querySelector(
                "footer, .footer, #footer, .site-footer, .footer-area, .footer-bar, .main-footer"
            );
        }

        function adjust() {
            const footer = findFooter();
            if (!footer) {
                // footer hâlâ yoksa (veya selector uymuyorsa) shift sıfır kalsın
                btn.style.setProperty("--wa-shift", "0px");
                return;
            }

            const footerRect = footer.getBoundingClientRect();

            // Footer ekranda değilse
            if (footerRect.top >= window.innerHeight) {
                btn.style.setProperty("--wa-shift", "0px");
                return;
            }

            // Footer ekrana girdiyse: butonu yukarı it
            const overlap = window.innerHeight - footerRect.top;
            const shift = Math.max(0, overlap + gap);

            btn.style.setProperty("--wa-shift", shift + "px");
        }

        window.addEventListener("scroll", adjust, { passive: true });
        window.addEventListener("resize", adjust);
        window.addEventListener("load", adjust);
        document.addEventListener("DOMContentLoaded", adjust);

        // İlk hesap
        adjust();
    })();

