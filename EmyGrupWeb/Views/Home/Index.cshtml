        function startGallerySlider(galleryId) {
        const container = document.getElementById(galleryId);
        if (!container) return;

        const images = container.querySelectorAll("img");
        const total = images.length;
        if (total === 0) return;

        let index = 0;

        // Başlangıçta sadece ilk fotoğrafı göster
        images.forEach((img, i) => {
            img.style.opacity = (i === 0 ? "1" : "0");
        });

        function cycle() {
            // Sıradaki index
            index = (index + 1) % total;

            // Sadece o indexteki fotoğrafı göster
            images.forEach((img, i) => {
                img.style.opacity = (i === index ? "1" : "0");
            });

            // 1.5 saniye sonra tekrar çağır
            setTimeout(cycle, 1500);
        }

        // Döngüyü başlat
