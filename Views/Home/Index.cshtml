    }

    .stat-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 3px;
        background: linear-gradient(90deg, #446D96, #274472);
        opacity: 0;
        transition: opacity 0.25s ease;
    }

    .stat-card:hover {
        transform: translateY(-6px);
        box-shadow: 0 12px 36px rgba(39, 68, 114, 0.12);
    }

    .stat-card:hover::before {
        opacity: 1;
    }

    .stat-icon {
        margin-bottom: 16px;
