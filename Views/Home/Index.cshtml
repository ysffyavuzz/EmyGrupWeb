<style>
    :root {
        --navbar-height: 70px;
    }

    body {
        background: #f8fafc !important;
        overflow: hidden;
    }

    body.page-loaded {
        overflow: auto;
    }

    /* ============================================
       PRELOADER
       ============================================ */
    #preloader {
        position: fixed;
        inset: 0;
        background: linear-gradient(180deg, #ffffff 0%, #f8fafc 100%);
        display: flex;
        justify-content: center;
        align-items: center;
        z-index: 9999;
    }

    .preloader-content {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 32px;
    }

    #preloaderLogo {
        width: min(350px, 65vw);
        filter: drop-shadow(0 20px 40px rgba(0, 0, 0, 0.08));
        animation: preloaderLogo 2.6s cubic-bezier(0.16, 1, 0.3, 1) forwards;
    }

    .preloader-progress {
        width: 180px;
        height: 4px;
        background: rgba(68, 109, 150, 0.1);
        border-radius: 100px;
        overflow: hidden;
    }

    .preloader-bar {
        width: 0;
        height: 100%;
        background: linear-gradient(90deg, #446D96, #274472);
        border-radius: 100px;
        animation: preloaderBar 2.3s ease-out forwards;
    }

    @@keyframes preloaderLogo {
        0% { opacity: 0; transform: scale(0.9) translateY(20px); }
        20% { opacity: 1; transform: scale(1) translateY(0); }
        80% { opacity: 1; transform: scale(1) translateY(0); }
        100% { opacity: 0; transform: scale(0.95) translateY(-20px); }
    }

    @@keyframes preloaderBar {
        0% { width: 0; }
        100% { width: 100%; }
    }

    body.page-loaded #preloader {
        animation: preloaderHide 0.4s ease forwards;
    }

    @@keyframes preloaderHide {
        to { opacity: 0; visibility: hidden; pointer-events: none; }
    }

    /* ============================================
       HERO SECTION - İki Büyük Görsel
       ============================================ */
    .hero-section {
        padding: 90px 24px 40px;
        background: #f8fafc;
    }

    .hero-bento {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 24px;
        max-width: 1400px;
        margin: 0 auto;
    }

    .hero-card {
        position: relative;
        height: 520px;
        border-radius: 28px;
        overflow: hidden;
        text-decoration: none;
        display: block;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
        transition: all 0.5s cubic-bezier(0.16, 1, 0.3, 1);
    }

    .hero-card:hover {
        transform: translateY(-10px) scale(1.01);
        box-shadow: 0 20px 50px rgba(0, 0, 0, 0.18);
    }

    .hero-card-media {
        position: absolute;
        inset: 0;
    }

    .hero-card-media img,
    .hero-card-media video {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.6s cubic-bezier(0.16, 1, 0.3, 1);
    }

    .hero-card:hover .hero-card-media img,
    .hero-card:hover .hero-card-media video {
        transform: scale(1.06);
    }

    .hero-card-overlay {
        position: absolute;
        inset: 0;
        background: linear-gradient(180deg,
            transparent 0%,
            transparent 30%,
            rgba(255, 255, 255, 0.4) 60%,
            rgba(255, 255, 255, 0.85) 100%) !important;
        display: flex;
        align-items: flex-end;
        justify-content: space-between;
        padding: 32px;
        opacity: 1 !important;
        transition: background 0.4s ease;
    }

    .hero-card:hover .hero-card-overlay {
        background: linear-gradient(180deg,
            transparent 0%,
            transparent 20%,
            rgba(255, 255, 255, 0.5) 50%,
            rgba(255, 255, 255, 0.95) 100%) !important;
    }

    .hero-card-badge {
        background: linear-gradient(135deg, #446D96 0%, #274472 100%);
        color: #ffffff;
        padding: 12px 24px;
        border-radius: 100px;
        font-weight: 600;
        font-size: 0.9375rem;
        letter-spacing: 0.02em;
        box-shadow: 0 4px 16px rgba(68, 109, 150, 0.3);
    }

    .hero-card-arrow {
        width: 52px;
        height: 52px;
        background: linear-gradient(135deg, #446D96 0%, #274472 100%);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.25rem;
        color: #ffffff;
        transform: translateX(0);
        opacity: 1;
        transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
        box-shadow: 0 4px 16px rgba(68, 109, 150, 0.3);
    }

    .hero-card:hover .hero-card-arrow {
        transform: scale(1.1);
        box-shadow: 0 6px 24px rgba(68, 109, 150, 0.4);
    }

    @@media (max-width: 992px) {
        .hero-card {
            height: 420px;
        }
    }

    @@media (max-width: 768px) {
        .hero-section {
            padding: 80px 16px 32px;
        }

        .hero-bento {
            grid-template-columns: 1fr;
            gap: 16px;
        }

        .hero-card {
            height: 300px;
            border-radius: 20px;
        }

        .hero-card-overlay {
            opacity: 1 !important;
            background: linear-gradient(180deg,
                transparent 0%,
                transparent 20%,
                rgba(255, 255, 255, 0.5) 50%,
                rgba(255, 255, 255, 0.95) 100%) !important;
        }

        .hero-card-arrow {
            opacity: 1;
            transform: translateX(0);
            width: 44px;
            height: 44px;
        }

        .hero-card-badge {
            padding: 10px 18px;
            font-size: 0.875rem;
        }
    }

    /* ============================================
       STATS SECTION
       ============================================ */
    .stats-section {
        padding: 64px 24px;
        background: #f8fafc;
        border-bottom: 1px solid #e2e8f0;
    }

    .stats-grid {
        display: grid;
